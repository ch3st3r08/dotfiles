PL_COLORS[MyPurple]='\[\e[38;2;180;142;173m\]'
PL_COLORS[On_MyPurple]='\[\e[48;2;180;142;173m\]'

#it's actually bluish17,102,170
PL_COLORS[MyGreen]='\[\e[38;2;17;102;170m\]'
PL_COLORS[On_MyGreen]='\[\e[48;2;17;102;170m\]'

PL_COLORS[MyDarkBlue]='\[\e[38;2;129;161;193m\]'
PL_COLORS[On_MyDarkBlue]='\[\e[48;2;129;161;193m\]'

PL_COLORS[MyWhite]='\[\e[38;2;216;222;233m\]'
PL_COLORS[On_MyWhite]='\[\e[38;2;216;222;233m\]'

# All segments are enabled. Uncomment/comment to enable/disable a segment

PL_SEGMENTS=(
    # segment                Background  Foreground
    'time_segment            MyDarkBlue  MyLightGrey'
    #'battery_segment         MyBlue      Black'
    'user_segment            MyBlue      MyLightGrey'
    'ssh_segment             MyYellow    Black'
    'screen_session_segment  MyLightGrey Black'
    'virtual_env_segment     MyBlue      MyWhite'
    #'conda_env_segment       MyBlue      Black'
    #'aws_profile_segment     MyLime      Black'
    #'kubernetes_segment      MyLime      Black'
    'path_segment            MyLightGrey MyWhite'
    'read_only_segment       MyRed       MyWhite'
    'background_jobs_segment MyPurple    MyWhite'
    'git_segment             MyGreen     MyWhite'
    'return_code_segment     MyRed       White'
    'newline_segment'
   # 'duration_segment        MyDarkGrey  White'
    'prompt_segment          MyLightGrey  MyWhite'
)

# segment Options
PL_PATH_TRIM=0             # 0 Full path, 1, Current, 2+ trim level
PL_TIME_SHOW_SECONDS=true
PL_USER_SHOW_HOST=false
PL_USER_USE_IP=false
PL_SSH_SHOW_HOST=true
PL_SSH_USE_IP=true
PL_GIT_DIRTY_FG=Black
PL_GIT_DIRTY_BG=MyOrange
PL_GIT_AHEAD=true
PL_GIT_MODIFIED=true
PL_GIT_STAGED=true
PL_GIT_CONFLICTS=true
PL_GIT_UNTRACKED=true
PL_GIT_STASH=true
PL_PROMPT_ROOT_BG=MyRed
PL_PROMPT_ROOT_FG=MyWhite

# redefine symbols using powerline glyphs
PL_SYMBOLS[hard_separator]="ÓÇ∞"
PL_SYMBOLS[soft_separator]="ÓÇ±"

PL_SYMBOLS[git_branch]="ÓÇ†"
PL_SYMBOLS[git_untracked]="‚Üî"
PL_SYMBOLS[git_stash]="¬ß"
PL_SYMBOLS[git_ahead]="‚Üë"
PL_SYMBOLS[git_behind]="‚Üì"
PL_SYMBOLS[git_modified]="‚úö "
PL_SYMBOLS[git_staged]="‚úî "
PL_SYMBOLS[git_conflicts]="‚úò "

PL_SYMBOLS[read_only]="ÓÇ¢"
PL_SYMBOLS[return_code]="‚öë"
PL_SYMBOLS[background_jobs]="‚èé"

PL_SYMBOLS[battery_charging]="‚ö°"
PL_SYMBOLS[battery_discharging]="‚ñÆ"

PL_SYMBOLS[aws_profile]='‚òÅ'
PL_SYMBOLS[screen]='üíª'
PL_SYMBOLS[duration]='‚è≥'

