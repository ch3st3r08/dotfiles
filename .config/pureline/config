#True colors format \[\e[38;2;0;0;0m]\]
PL_COLORS[MyOrange]='\[\e[38;2;235;203;139m\]'
PL_COLORS[On_MyOrange]='\[\e[48;2;235;203;139m\]'

PL_COLORS[MyRed]='\[\e[38;2;191;97;106m\]'
PL_COLORS[On_MyRed]='\[\e[48;2;191;97;106m\]'

PL_COLORS[MyLime]='\[\e[38;2;163;190;140m\]'
PL_COLORS[On_MyLime]='\[\e[48;2;163;190;140m\]'

PL_COLORS[MyYellow]='\[\e[38;5;227m\]'
PL_COLORS[On_MyYellow]='\[\e[48;5;227m\]'

PL_COLORS[MyLightGrey]='\[\e[38;2;59;66;82m\]'
PL_COLORS[On_MyLightGrey]='\[\e[48;2;59;66;82m\]'

PL_COLORS[MyBlue]='\[\e[38;2;126;192;208m\]'
